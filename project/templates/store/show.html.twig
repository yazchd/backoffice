{% extends 'base.html.twig' %}

{% block title %} Store {{ store.name }} {% endblock %}

{% block body %}
<div class="container-fluid">
    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('store.index') }}">Stores</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ store.name }}</li>
    </ol>
    </nav>
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Store {{ store.name }}</h1>

    <a href="{{ path('store.index') }}" class="btn btn-primary btn-icon-split">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Back to Stores</span>
    </a>
    <span class="ml-3 mr-3"></span>
    <a href="{{ path('store.categories', { id: store.id }) }}" class="btn btn-info btn-icon-split">
        <span class="text">Categories</span>
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-right"></i>
        </span>
    </a>
    <a href="{{ path('store.products', { id: store.id }) }}" class="btn btn-success btn-icon-split">
        <span class="text">Products</span>
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-right"></i>
        </span>
    </a>
    <hr>

    <h2>Store Details</h2>
    <div class="row">
        <div class="col-md-6">
            {# <img src="{{ '/uploads/images/product/' ~ product.thumbnail }}" alt="{{ product.title }}" class="img-fluid"> #}
        </div>
    </div>
    <p><strong>Name:</strong> {{ store.name }}</p>
    <p><strong>Site URL:</strong> {{ store.siteUrl }}</p>
    <p><strong>Created At:</strong> {{ store.createdAt|date('Y-m-d H:i:s') }}</p>
    <p><strong>Updated At:</strong> {{ store.updatedAt|date('Y-m-d H:i:s') }}</p>

    <a href="{{ path('store.edit', { id: store.id }) }}" class="btn btn-warning">Edit</a>
</div>


<hr>


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>{{ categories|length }} Categories </h2>
            <ul>
                {% for category in categories %}
                    <li>{{ category.name }} - <a href="{{ path('category.show', { id: category.id }) }}"><i class="fas fa-eye"></i></a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>{{ products|length }} Products </h2>
            <ul>
                {% for product in products %}
                    <li>{{ product.name }} - <a href="{{ path('product.show', { id: product.id }) }}"><i class="fas fa-eye"></i></a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
