{% extends 'base.html.twig' %}

{% block title %} Product Create {% endblock %}

{% block body %}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Add Product</h1>

    <div class="row">
        {{ form_start(form) }}
            <div class="col-md-12">
                {{ form_row(form.title) }}
            </div>

            <div class="col-md-12">
                {{ form_row(form.category) }}
            </div>

            <div class="col-md-12">
                {{ form_row(form.slug) }}
            </div>

            <div class="col-md-12">
                {{ form_row(form.description) }}
            </div>

            <div class="col-md-12">
                {{ form_row(form.thumbnailFile) }}
            </div>

            <div class="col-md-12" style="text-align: right;">
                {{ form_row(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
